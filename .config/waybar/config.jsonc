    "height": 25, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad"
    ],
    "modules-center": [
        "wlr/taskbar"
    ],
    "modules-right": [
        "idle_inhibitor",
        "pulseaudio",
        "network",
        "power-profiles-daemon",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "battery",
        "clock",
        "tray",
	"custom/power"
    ],
    // Modules configuration
    "sway/workspaces": {
        "on-click": "activate",
        //"active-only": false,
        "all-outputs": true,
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
         },
        "format": "{icon}",
        "format-icons": {
            "1": "ÓÆ¥",
            "2": "ÓÆ¥",
            "3": "ÓÆ¥",
            "4": "ÓÆ¥",
            "5": "ÓÆ¥"
